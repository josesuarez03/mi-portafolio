---
// src/components/AboutSection.astro
import { about } from "@/data/portafolio";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = about.title,
  description = about.description
} = Astro.props;
---

<section class="about-section mb-12">
  <h2 class="section-title text-xl font-semibold text-white mb-4">{title}</h2>
  <p class="section-description text-gray-300 leading-relaxed whitespace-pre-line">{description}</p> 
</section>