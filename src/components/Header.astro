---
import { Avatar, AvatarFallback, AvatarImage } from "./ui/avatar";
import { Button } from "./ui/button";
import { Mail, Github, Linkedin, MapPin } from "lucide-react";
---

<header class="flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-6 mb-8 p-4 sm:p-0">
    <div class="flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-4 flex-1 min-w-0 w-full">
        <!-- Info personal -->
        <div class="flex flex-col items-center sm:items-start text-center sm:text-left min-w-0 flex-1">
            <h1 class="text-xl sm:text-2xl font-semibold text-white truncate w-full">José Suarez Barreto</h1>
            <p class="text-sm sm:text-base text-gray-400 mt-1">Desarrollador FullStack</p>
            <div class="flex items-center justify-center sm:justify-start gap-1 text-xs sm:text-sm text-gray-500 mt-1">
                <MapPin className="w-3 h-3 sm:w-4 sm:h-4 flex-shrink-0" />
                <span>Madrid, España</span>
            </div>
        </div>
    </div>
    
    <!-- Botones de contacto -->
    <div class="flex flex-col sm:flex-row items-center gap-3 sm:gap-2 w-full sm:w-auto">
        <!-- Email button - responsive -->
        <a href="mailto:josysuarez2003@gmail.com" target="_blank" class="w-full sm:w-auto">
            <Button size="sm" className="w-full sm:w-auto gap-1.5 bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 sm:py-1.5 text-xs sm:text-sm justify-center">
                <Mail className="w-3 h-3 sm:w-4 sm:h-4 flex-shrink-0" />
                <span class="hidden xs:inline sm:inline">josysuarez2003@gmail.com</span>
                <span class="xs:hidden sm:hidden">Email</span>
            </Button>
        </a>
        
        <!-- Social buttons -->
        <div class="flex items-center gap-2">
            <a href="https://github.com/josesuarez03" target="_blank" rel="noopener noreferrer">
                <Button variant="ghost" size="sm" className="text-gray-400 hover:text-blue-400 p-2 sm:p-1.5">
                    <Github className="w-4 h-4 sm:w-5 sm:h-5" />
                </Button>
            </a>
            <a href="https://www.linkedin.com/in/josé-suárez-barreto" target="_blank" rel="noopener noreferrer">
                <Button variant="ghost" size="sm" className="text-gray-400 hover:text-blue-400 p-2 sm:p-1.5">
                    <Linkedin className="w-4 h-4 sm:w-5 sm:h-5" />
                </Button>
            </a>
        </div>
    </div>
</header>