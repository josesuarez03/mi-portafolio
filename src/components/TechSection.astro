---
// src/components/TechSection.astro
import { Badge } from "./ui/badge";
import { technologies } from "@/data/portafolio";

interface Technology {
  name: string;
  color?: string;
}

interface TechSectionProps {
  title?: string;
  technologies?: Technology[];
}

const {
  title = "Tecnolog√≠as",
  technologies: techProp = technologies,
} = Astro.props;
---

<section class="mb-12">
  <h2 class="text-xl font-semibold text-white mb-6">{title}</h2>

  <div class="flex flex-wrap gap-3">
    {techProp.map((tech) => (
      <Badge
        variant="secondary"
        className={`${tech.color || "bg-blue-600"} text-white hover:opacity-80 transition-opacity px-3 py-1 rounded-md`}
      >
        {tech.name}
      </Badge>
    ))}
  </div>
</section>